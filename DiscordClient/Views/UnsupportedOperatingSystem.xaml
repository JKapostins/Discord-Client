<Page
    x:Class="DiscordClient.Views.UnsupportedOperatingSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DiscordClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600" Margin="10,0">
        <TextBlock Text="Unsupported OS Version" FontSize="24"/>
                <RichTextBlock Name="messageBlock" Margin="0,10,0,0">
                </RichTextBlock>
        <Button  x:Name="exitButton" Content="Exit"  HorizontalAlignment="Stretch"  Height="33" Click="exitButton_Click" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
